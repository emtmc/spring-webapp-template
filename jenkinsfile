pipeline{
    agent any
    tools {
        maven 'my_maven_3.6.0'
    }
    stages{
    stage('Build') {
        steps {
            sh 'mvn clean compile'
        }
    }
    stage('Testing') {
        steps{
            sh 'mvn test verify'
        }
    }
    stage('Package') {
        steps {
            sh 'mvn package'
        }
    }
        stage ('Deploy to Integration') {
            agent {master
                        {
                         label "jenkins"}
            }
            steps {
                build job:'Tomcat deploy to Integration' , parameters:[string(name: 'BRANCH_NAME', value: "${env.BRANCH_NAME}")]
            }
        }
    }
   }